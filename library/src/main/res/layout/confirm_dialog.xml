<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="313dp"
    android:layout_height="290dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/confirm_dialog_bg"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认认证信息"
            android:textColor="#666666"
            android:textSize="16sp"/>
        
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cir_close"
            android:layout_marginRight="10dp"/>
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcccccc"/>

    <TextView
        android:id="@+id/tv_confirm_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人像面信息有误会影响您的授信结果
        请确认一下信息是都匹配"
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        />

    <RelativeLayout
        android:id="@+id/ll_front_result_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/idcard_info_bg"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/tv_id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李沓玛"
            android:layout_alignLeft="@id/tv_name"
            android:textSize="12sp"
            android:layout_below="@id/tv_name"
            android:textColor="#404040"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号："
            android:layout_marginLeft="47dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:textSize="11sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/tv_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44022319682214475"
            android:layout_below="@id/tv_number"
            android:layout_alignLeft="@id/tv_number"
            android:textSize="12sp"
            android:textColor="#404040"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住址:"
            android:layout_below="@id/tv_id_name"
            android:layout_alignLeft="@id/tv_name"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_id_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省广州市越秀区时代广场A座201"
            android:layout_below="@id/tv_address"
            android:layout_alignLeft="@id/tv_address"
            android:textSize="12sp"
            android:textColor="#404040"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_banktips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="识别卡号:"
            android:layout_below="@id/tv_id_address"
            android:layout_alignLeft="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textColor="#999999"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_id_bankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1029058219214798213124"
            android:layout_below="@id/tv_banktips"
            android:layout_alignLeft="@id/tv_banktips"
            android:textSize="12sp"
            android:textColor="#404040"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_back_result_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/idcard_info_bg">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签发机关："
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="12sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/tv_id_issue_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州市越秀分局"
            android:layout_marginLeft="22dp"
            android:textSize="14sp"
            android:textColor="#404040"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期限："
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/tv_id_valid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011.01.01 - 2020.01.01"
            android:layout_marginLeft="22dp"
            android:textSize="14sp"
            android:textColor="#404040"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_back_modify"
            android:text="返回修改"
            android:layout_width="135dp"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/back_modify_bg"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:text="确认无误"
            android:layout_width="135dp"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/confirm_bg"/>

    </RelativeLayout>

</LinearLayout>